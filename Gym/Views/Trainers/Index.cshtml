@model IEnumerable<Gym.Models.Trainer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@*=======================filtrim======================*@
<div class="row">
    <div class="col-md-5">
        @using (Html.BeginForm("Index", "Trainers", FormMethod.Get,
                        new { @class = "navbar-form row" }))
        {
            <div class="form-group">
                @Html.TextBox("value", null, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        }
    </div>
</div>
@*====================================================*@

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExercisePlan.ExercisePlanName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExperienceDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExercisePlan.ExercisePlanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TrainerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TrainerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TrainerId })
            </td>
        </tr>
    }

</table>
